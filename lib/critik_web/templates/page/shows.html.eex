<div class="row">

  <div class="col-3" style="height: 90vh; background-color: white;">
    <button class="btn btn-outline-dark" onclick="setTimeout(starttimer, 5000); addSpinner();">Play!</button>
    <br>
    <p id="timer">Start Timer: 5 Seconds</p>
    <div id="spinner"></div>
    <br>
    
  </div>

  <div class="col-9" style="height: 90vh; background-color: purple; padding: 10px; border-radius: 10px;">
    <div class="container">
      <div class="col-12" style="height: 70vh; overflow-y: scroll;">
        <ul class="list-group" id="messages">
          
        </ul>
      </div>

      
      <div class="col-12" style="height: 15vh;">
        <div class="form-control">
          <input type="text" id="message" placeholder="Post Message Here" class="form-control">
        </div>
      </div>
      
    </div>
  
  </div>


</div>


<script>

var input = document.getElementById("message");
var timer = new Date();

var retjson = [];

// Execute a function when the user releases a key on the keyboard
input.addEventListener("keyup", function(event) {
  // Cancel the default action, if needed
  event.preventDefault();
  // Number 13 is the "Enter" key on the keyboard
  if (event.keyCode === 13) {
    // Trigger the button element with a click
    var temp = document.getElementById("messages");

    var node = document.createElement("li");                 // Create a <li> node
    node.appendChild(document.createTextNode(input.value));
    node.setAttribute("class", "list-group-item");
             // Create a text node
    temp.appendChild(node);
    console.log("" + (Date.now() - timer));
    var listed = retjson
    listed.push([input.value, Date.now() - timer]);
    retjson = listed;
    input.value = ""; 

  }
});

function sendmessage(messages) {
  var temp = document.getElementById("messages");

  var node = document.createElement("li");                 // Create a <li> node
  node.appendChild(document.createTextNode(messages));
  node.setAttribute("class", "list-group-item collapse");
             // Create a text node
  temp.appendChild(node);
  beep();
  input.value = "";
  node.setAttribute("class", "list-group-item");
}

function starttimer()
{

    document.getElementById("spinobject").style.display = 'none';
    console.log("END <%= @conn.assigns.messages %>");
    var datas = atob("<%= @conn.assigns.messages %>");

    var dataobject = JSON.parse(datas);
    console.log("MIDDLE");
    console.log(JSON.parse(datas));
    var lists = JSON.parse(datas);

    var first = "";
    var second = 0;

    for (var i = 0; i < lists.length; i++)
    {
        var item = lists[i];
        console.log(item);
        first = item[0];
        console.log("FIRST: " + first);
        second = item[1];
        console.log(second);
        sendit(first, second);
    }
}

function addSpinner()
{
  var node = document.createElement("I");
  node.setAttribute("class", "fas fa-spinner fa-spin");
  node.setAttribute("id", "spinobject");
  node.style.fontSize = '3em';
  document.getElementById("spinner").appendChild(node);

}

function beep() {
    var snd = new Audio("data:audio/wav;base64,");  
    snd.play();
}

function stopit() {

  var temp = document.getElementById("messages");

  var node = document.createElement("li");
  
  urls = btoa(JSON.stringify(retjson));
  urldecode = window.atob(urls);

  console.log(urls);
  console.log(urldecode);
  texts = "http://127.0.0.1:4000?message=" + urls;
  // Create a <li> node
  node.appendChild(document.createTextNode(texts));
  node.setAttribute("class", "list-group-item collapse");
             // Create a text node
  temp.appendChild(node);
  beep();
  input.value = "";
  node.setAttribute("class", "list-group-item");
  node.setAttribute("x-overflow", "scroll");
  console.log(retjson);

}

function sendit(onestep, twostep)
{
    setTimeout(function(){sendmessage(onestep);}, twostep);
}





